{% extends "layout.html.jinja2" %}

{% block body %}
    <dl>
        {% for post in posts %}
            <dt><b>{{ post.title }}</b> (edited by {{ post.authorPost.username }})
                {% if post.authorPost.id == 1 %}
                    <a href="{{ url_for("create_or_process_post", post_id=post.id) }}">edit</a> |
                    <a href="{{ url_for("delete_post", post_id=post.id) }}">delete</a>
                {% endif %}
            </dt>
            <dd>Image</dd>
            <dd>{{ post.content }}</dd>
            <dd>
                <ul>Commentaires :
                    {% if post.authorPost.id != 1 %}
                        <a href="{{ url_for("comment_a_post", post_id=post.id) }}"><b>add a comment</b></a>
                    {% endif %}
                    {% for comment in post.comments %}
                    <li>
                        {% if comment.post_id == post.id %}
                            {{ comment.authorComment.username }} a comment√© : {{ comment.content }}
                        {% endif %}
                    </li>
                    {% endfor %}
                </ul>
            </dd>
        {% endfor %}
    </dl>
{% endblock %}
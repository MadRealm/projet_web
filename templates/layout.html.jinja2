<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <!-- Mise à l'echelle pour les navigateurs mobiles -->
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- CSS de Bootstrap -->
	    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

       <!-- Notre CSS -->
       <link rel= "stylesheet" type= "text/css" href= "{{ url_for('static',filename='index.css') }}">

        <title>Delaygram</title>
    </head>
    <body>

    <nav class="navbar navbar-expand-lg navbar-dark" style = "background-color:rebeccapurple">
        <div class="d-grid col-2">
            <a href="{{ url_for("index") }}" class = "btn btn-primary" role="button">Delaygram </a>
        </div>
        {% if current_user.is_authenticated %}
            <div class="d-grid col-6">
                <a href="{{ url_for("create_or_process_post")}}" class="btn btn-danger " role ="button" id="2">Ajouter une image</a>
            </div>
        {% else %}
            <div class ="d-grid col-6">
              <a href="{{ url_for("login") }}" class = "btn btn-danger" role="button">Se connecter</a>
            </div>
            <div class="d-grid col">
                <a href="{{ url_for("signup") }}" class = "btn btn-primary" role="button">S'inscrire</a>
            </div>
        {% endif %}
        <form action="{{ url_for("search") }}" method="post">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Rechercher ..." name="search_string" aria-describedby="button-addon2">
              <button type = "submit" class = "btn btn-primary"> Rechercher</button>            </div>
        </form>
        </div>
        {% if current_user.is_authenticated %}
            <div class="d-grid col-1">
                <a href="{{ url_for("profile") }}" class = "btn btn-primary" role="button">Mon profil</a>
            </div>
            <div>
                <a href="{{ url_for("logout") }}" class = "btn btn-primary" role="button">Se déconnecter</a>
            </div>
        {% endif %}
    </nav>



    <div class="container col-10">
        <main class="main-content">
        {% block body %}
        {% endblock %}
        </main>
    </div>

    <!-- Fichiers Javascript nécessaires pour certains composants Bootstrap -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </body>
</html>